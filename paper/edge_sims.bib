journal = {Xx2},
keywords = {bayesian,diversification,phenotypic evolution,phylogenetic uncertainty},
pages = {1--23},
pmid = {25246403},
title = {{No substitute for real data: phylogenies from birth-death polytomy resolvers should not be used for many downstream comparative analyses}},
